<?xml version="1.0" encoding="UTF-8"?> 
<configuration>
	<!-- 文件输出格式 -->  
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" /> 
	<!-- 日志打印路径 -->
	<property name="DEV_HOME" value="/home/log/logs" />
	
	<!-- 控制台日志打印 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				${PATTERN}
			</Pattern>
		</layout>
	</appender>
	
	<!-- FILE-ADMIN日志打印 -->
	<appender name="FILE-ADMIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${DEV_HOME}/admin-%d{yyyy-MM-dd}.log</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>100</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </layout>
	</appender>
	
	<!-- error日志打印 -->
	<appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <File>${DEV_HOME}/admin-error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${DEV_HOME}/admin-error-%d{yyyyMMdd}.log.%i
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>500MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>2</maxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
            	${PATTERN}
            </Pattern>
        </layout>
    </appender>

	<logger name="com.hszk.taurus.admin" level="info" additivity="false">
		<appender-ref ref="FILE-ADMIN" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ERROR_FILE" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ERROR_FILE" />
	</root>
</configuration>
